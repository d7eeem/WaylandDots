// sourced from modules based on config.ctl //

    "custom/layout": {
      "exec": "/home/tinker/.local/bin/statusbar/sb-layoutcheacker.sh",
      "restart-interval": 1
    },
    "hyprland/workspaces": {
      "active-only": false,
      "all-outputs": true,
      "format": "{name}",
      "show-special": false,
      "on-click": "activate",
      "on-scroll-up": "hyprctl dispatch workspace +1",
      "on-scroll-down": "hyprctl dispatch workspace -1",
      "persistent-workspaces": {
        "1": [],
        "2": [],
        "3": [],
        "4": [],
        "5": []
      },
      "format-icons": {
        "active": " ",
        "default": " "
      }
    },
  "custom/launcher": {
    "format": "",
    "on-click": "/home/tinker/.local/bin/statusbar/sb-launcher.sh",
    "tooltip-format": "Launch your favorite apps"
  },
    "hyprland/window": {
        "format": "{}",
        "rotate": 0,
        "separate-outputs": true,
        "rewrite": {
            "(.*)Zen Browser": "Zen Browser ",
            "title<.*youtube.*>": "",
            "(.*) - fish": "> [$1]",
            "kiTTY": "$1  ",
            "(.*)Steam": "Steam 󰓓",
            "(.*) - Brave": "$1 ",
            "New Tab - Brave": "Brave ",
            "(.*)Brave": "Brave ",
            "(.*) - Discord": "$1  "
        },
        "max-length": 10
    },
    // "hyprland/window": {
    //     "format": "{}",
    //     "rotate": 0,
    //     "separate-outputs": true,
    //     "rewrite": {
    //         "tinker@luna:(.*)": "$1 ",
    //         "(.*) — Mozilla Firefox": "$1 󰈹",
    //         "(.*) — Ablaze Floorp": "$1 - floorp 󰈹",
    //         "(.*)Mozilla Firefox": "Firefox 󰈹",
    //         "(.*) — Dolphin": "$1 󰉋",
    //         "(.*)Steam": "Steam 󰓓",
    //         "(.*) - Brave": "$1 ",
    //         "New Tab - Brave": "Brave ",
    //         "(.*)Brave": "Brave ",
